<div class="retailer-order-view">
  <div class="order-show">
    <div class="user-infos">
      <% avatar_url = current_user.facebook_picture_url || 'avatar.png' %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
      <p><%= @order.user.f_name %></p>
      <p><%= @order.user.l_name %></p>
      <p><strong>Utilisateur</strong> : <%= @order.user.email %></p>
    </div>

    <div class="order-details">
      <p><strong>Date</strong> : <%= @order.pick_up_at %></p>
      <p><strong>Instructions</strong> : <%= @order.instructions %></p>
      <p><strong>Prix total</strong> : <%= @order.total_price %>€</p>
    </div>

    <div class="order-status">
      <p><strong>Statut</strong> : <%= @order.status %></p>
      <div class="progress">
      <i class="fa fa-circle done" aria-hidden="true"></i>
      <span class="bar done"></span>
      <i class="fa fa-circle done" aria-hidden="true"></i>
      <span class="bar"></span>
      <i class="fa fa-circle-o" aria-hidden="true"></i>
      <span class="bar"></span>
      <i class="fa fa-circle-o" aria-hidden="true"></i>
      </div>
    </div>


    <div class="product-and-buttons">
      <div class="product-details">
        <p><strong>Produits</strong> :</p>
          <% @order.ordered_products.each do |ordered_product| %>
            <p><%= ordered_product.product.name %> : <%= ordered_product.quantity %> <%= ordered_product.product.measurement_units %></p>
          <% end %>
      </div>
      <div class="action-buttons">
        <%= link_to order_path(order, order: {status: :ready}), method: :patch,
          class: "btn btn-success btn-block ", data:{confirm: "Are you sure?"} do %>
           Confirmer
        <% end %>
        <%= link_to order_path(order, order: {status: :canceled}), method: :patch,
          class: "btn btn-danger btn-block ", data:{confirm: "Are you sure?"} do %>
           Annuler
        <% end %>
        <%= link_to retailer_shop_order_path(@shop, order),
          class: "btn btn-primary btn-block " do %>
           Voir détails
        <% end %>
      </div>
    </div>
  </div>
</div>







